@model IEnumerable<IntroductionMVC.Models.Product.ProductViewModel>
@{
    ViewBag.Title = "All Products";
}

<h2>@ViewBag.Title</h2>

<div class="card" style="width: 18rem;">
    <div class="card-header">@ViewBag.Title</div>
    <ul class="list-group list-group-flush">
        @foreach (var product in Model)
        {
            <li class="list-group-item">
                N.@product.Id: @product.Name - @product.Price lv.
            </li>
        }
    </ul>
</div>
    @using (Html.BeginForm("ById", "Product", FormMethod.Get))
    {
        <input type="number" name="id" min="1" value="@ViewBag.Id" placeholder="Id"/>
        <br/>
        <input type="submit" value="Show Product With Id" class="btn btn-primary mt-2" />
    }
